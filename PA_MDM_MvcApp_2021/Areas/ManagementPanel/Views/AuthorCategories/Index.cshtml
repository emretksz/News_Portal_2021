@model IEnumerable<PA_MDM_MvcApp_2021.Models.AuthorCategories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Kategorileri</h2>

<p>
    @Html.ActionLink("Kategori Oluştur", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Kategori Adı
        </th>
        <th>
          Aktiflik Durumu
        </th>
        <th>
           Kayıt Tarihi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorCategoryName)
        </td>
        <td>
            @if (item.IsActive)
            {
            <span>Aktif</span>
            }
            else
            {
                <span>Pasif</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.AuthorCategoryId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.AuthorCategoryId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.AuthorCategoryId })
        </td>
    </tr>
}

</table>
