<div class="trending-area fix">
    <div class="container">
        <div class="trending-main">
            <!-- Trending Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="trending-tittle">
                        <strong>Güncel Yazılar</strong>
                        <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                        <div class="trending-animated">
                            <ul id="js-news" class="js-hidden">
                                <li class="news-item">Bangladesh dolor sit amet, consectetur adipisicing elit.</li>
                                <li class="news-item">Spondon IT sit amet, consectetur.......</li>
                                <li class="news-item">Rem ipsum dolor sit amet, consectetur adipisicing elit.</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    <div class="trending-top mb-30">
                        <div class="trend-top-img">
                            @foreach (var item in Model.MdmBlogs.OrderByDescending(u => u.MdmId).Take(1).ToList())
                            {

                                <img src="@item.ImageURL" id="Trend" alt="">
                                <div class="trend-top-cap">
                                    <span>@item.MdmCategories.CategoryName</span>
                                    <h2><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })">@item.Title</a></h2>
                                    <p style="font-size:12px;color:red">@item.MdmBlogDetails.Authors.NameSurname / @item.RegisterDate.ToString("dd MMM yyyy")</p>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                            @foreach (var item in Model.MdmBlogs.OrderByDescending(u => u.MdmId).Take(4).ToList())
                            {
                                if (sayac == 1)
                                {

                                    <div class="col-lg-4">
                                        <div class="single-bottom mb-35">
                                            <div class="trend-bottom-img mb-30">
                                                <img src="@item.ImageURL" alt="">
                                            </div>

                                            <div class="trend-bottom-cap">

                                                <span class="color1">@item.MdmCategories.CategoryName </span>

                                                <h4><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })"> @item.Title</a></h4>
                                                <p style="font-size:12px">@item.MdmBlogDetails.Authors.NameSurname / @item.RegisterDate.ToString("dd MMM yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                }

                                if (sayac == 2)
                                {
                                    <div class="col-lg-4">
                                        <div class="single-bottom mb-35">
                                            <div class="trend-bottom-img mb-30">
                                                <img src="@item.ImageURL" alt="">
                                            </div>
                                            <div class="trend-bottom-cap">
                                                <span class="color2">@item.MdmCategories.CategoryName</span>
                                                <h4><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })">@item.Title</a></h4>
                                                <p style="font-size:12px">@item.MdmBlogDetails.Authors.NameSurname / @item.RegisterDate.ToString("dd MMM yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                }

                                if (sayac == 3)
                                {
                                    <div class="col-lg-4">
                                        <div class="single-bottom mb-35">
                                            <div class="trend-bottom-img mb-30">
                                                <img src="@item.ImageURL" alt="">
                                            </div>
                                            <div class="trend-bottom-cap">
                                                <span class="color3">@item.MdmCategories.CategoryName</span>
                                                <h4><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })">@item.Title</a></h4>
                                                <p style="font-size:12px">@item.MdmBlogDetails.Authors.NameSurname / @item.RegisterDate.ToString("dd MMM yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                sayac++;
                            }

                        </div>
                    </div>
                </div>
                @{
                    sayac = 0;
                }
                <!-- Riht content -->
                <div class="col-lg-4">
                    @foreach (var item in Model.MdmBlogs.OrderByDescending(u => u.MdmId).Take(8).ToList())
                    {
                        if (sayac >= 4)
                        {
                            <div class="trand-right-single d-flex">
                                <div class="trand-right-img">
                                    <img src="@item.ImageURL" id="yan" alt="">
                                </div>
                                <div class="trand-right-cap">
                                    @if (sayac == 4)
                                    {
                                        <span class="color3">@item.MdmCategories.CategoryName</span>

                                    }
                                    else if (sayac == 5)
                                    { <span class="color2">@item.MdmCategories.CategoryName</span>}

                                else if (sayac == 6)
                                { <span class="color4">@item.MdmCategories.CategoryName</span>}

                            else if (sayac == 7)
                            { <span class="color1">@item.MdmCategories.CategoryName</span>}



                        else if (sayac == 8)

                        { <span class="color3">@item.MdmCategories.CategoryName</span>}

                                    <h4><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })">@item.Title </a></h4>

                                </div>
                            </div>

                        }

                        sayac++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>









