        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MisakBlogDetails.AuthorId, "AuthorId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AuthorId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MisakLocationId, "", new { @class = "text-danger" })
        </div>
    </div>

