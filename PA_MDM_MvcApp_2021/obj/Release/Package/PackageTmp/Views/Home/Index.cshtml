@model PA_MDM_MvcApp_2021.Models.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int sayac = 0;
}
@section _Header{

    @Html.Partial("_Header")

}

<style>

    #Trend {
