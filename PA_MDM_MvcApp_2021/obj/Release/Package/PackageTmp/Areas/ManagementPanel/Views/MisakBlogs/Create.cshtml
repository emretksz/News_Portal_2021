        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MisakLocationId, "MisakLocationId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MisakLocationId", null, htmlAttributes: new { @class = "form-control" })
