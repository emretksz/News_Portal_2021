<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - A Pen by Mohithpoojary</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>

    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body>
    <!-- partial:index.partial.html -->
    
    <div class="container">
        <div class="screen">
            <div class="screen__content">

                @using (Html.BeginForm("UserCreate", "Account", FormMethod.Post, new { enctype="multipart/form-data", @class = "login" })){
                <div class="login__field" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                    <i class="login__icon fas fa-user"></i>
                    <input type="text" class="login__input" name="Name" required placeholder="Kullanıcı Adı">
                </div>
                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    <input type="password" class="login__input" name="Password"required placeholder="Şifre">
                </div>
                <div class="login__field">
                    <i class="login__icon fa fa-envelope" style="font-size:18px"></i>
                    <input type="email" class="login__input" name="Email" required placeholder="Mail Adresi">
                </div>
                <div class="login__field">
                    <i class="login__icon"></i>
                    <input type="file" name="imgFile" required placeholder="Resim Yükle...">
                </div>
          
                    <div class="row" >
                        <button class="button login__submit  col-3">
                            <span class="button__text">Kayıt Ol</span>
                            <i class="button__icon fas fa-chevron-right"></i>
                        </button>

                        <a href="@Url.Action("Login","Account")" class="button login__submit  ">Giriş Ekranı  <i class="button__icon fas fa-chevron-right"></i></a>
                    </div>
           
               
                   
         
                }
              

            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>
    <!-- partial -->

</body>
</html>
