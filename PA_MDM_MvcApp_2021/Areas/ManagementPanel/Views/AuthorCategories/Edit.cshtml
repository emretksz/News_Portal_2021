@model PA_MDM_MvcApp_2021.Models.AuthorCategories

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<center>
    <div class="form-horizontal container">
        <h4>Yazar Kategorisi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AuthorCategoryId)

        <div class="form-group">
      
            <div class="col-md-10">
                <h6 style="color:black">Kategori Adı</h6>
                @Html.EditorFor(model => model.AuthorCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthorCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h6 style="color:black">Kategori Aktif Mi?</h6>
                <div class="checkbox">
                   <span>Aktif Et:</span> @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</center>
}
<center>
    <div>
        @Html.ActionLink("Listeye Dön", "Index")
    </div>
</center>