@model PA_MDM_MvcApp_2021.Models.Announcements

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("Create", "Announcements",FormMethod.Post,new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <center>
<div class="container">
    <div class="form-horizontal">
        <h4>Duyurular</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                <h6 style="color:black">Başlık</h6>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         
            <div class="col-md-10">
                <h6 style="color:black">Açıklama</h6>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "editor1" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         
            <div class="col-md-10">
                <h6 style="color:black">Duyuru Resmi Ekle</h6>
                <input type="file" name="imgFile" value="" />
                @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
 
            <div class="col-md-10">
                <h6 style="color:black">Duyurunun Aktiflik durumu</h6>
                <div class="checkbox">
                    <span>Aktif Et:</span>   @Html.EditorFor(model => model.IsActvie)
                    @Html.ValidationMessageFor(model => model.IsActvie, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
        </center>
}
<center>
    <div>
        @Html.ActionLink("Listeye Dön", "Index")
    </div>
</center>