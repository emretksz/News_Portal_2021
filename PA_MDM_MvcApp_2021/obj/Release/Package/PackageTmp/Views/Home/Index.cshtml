<div class="weekly2-news-area  weekly2-pading gray-bg">
    <div class="container">
        <div class="weekly2-wrapper">
            <!-- section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-30">
                        <h3>Haftanın Yazıları</h3>
                    </div>
                </div>
            </div>

            @{
                int say = 1;
            }
            <div class="row">
                <div class="col-12">
                    <div class="weekly2-news-active dot-style d-flex dot-style">
                        @foreach (var item in Model.MdmBlogs.OrderByDescending(u => u.MdmId).Take(5).ToList())
                        {


                            <div class="weekly2-single">
                                <div class="weekly2-img">
                                    <img src="@item.ImageURL" alt="">
                                </div>
                                <div class="weekly2-caption">
                                    @if (say == 1)
                                    {
                                        <span class="color1">@item.MdmCategories.CategoryName</span><!--kategori-->
                                        say++;
                                    }
                                    else if (say == 2)
                                    {
                                        <span class="color2">@item.MdmCategories.CategoryName</span>
                                        say++;
                                    }
                                    else if (say == 3)
                                    {
                                        <span class="color3">@item.MdmCategories.CategoryName</span>
                                        say = 0;
                                    }
                                    else if (sayac == 4)
                                    {
                                        <span class="color4">@item.MdmCategories.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="color2">@item.MdmCategories.CategoryName</span>
                                    }

                                    <h4><a href="@Url.Action("BlogDetails","Home",new {id=item.MdmId,author=item.MdmBlogDetails.AuthorId })">@item.Title</a></h4><!--Subtitle + link-->


                                </div>
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
