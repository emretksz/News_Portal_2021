@model PA_MDM_MvcApp_2021.Models.Abouts

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "Abouts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <center>
            <div class="form-horizontal">
                <h4>Hakkımızda</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                      
                        <h6 style="color:black">Başlık</h6>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h6 style="color:black">Açıklama</h6>
                        @Html.TextAreaFor(model => model.Description,new { @class = "form-control", id = "editor1" })

                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <center>
                    <div class="form-group">
                        <div class="col-md-10">
                            <h6 style="color:black">Hakkımızda Kapak Resmi Yükle</h6>
                            <input type="file" name="imgFile" value="" />
                            @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </center>
                <center>
                    <div class="form-group">
                        <h6 style="color:black">Yazının Aktiflik Durumu</h6>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <span>Aktif Et:</span>  @Html.EditorFor(model => model.IsActive)
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </center>
                <center>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </center>
            </div>
    </center>
    </div>
}
<center>
    <div>
        @Html.ActionLink("Listeye Geri Dön", "Index")
    </div>
</center>